{
  "name": "dure-trips-kafka-microservices",
  "version": "1.0.0",
  "description": "Dure Trips Microservices",
  "author": "Dare Samuel",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:api-gateway": "nest build api-gateway",
    "builddock": "nest build api-gateway && nest build auth-microservice && nest build payments-microservice && nest build airline-ticket-management-microservice && nest build book-airline-ticket-microservice && nest build book-hotel-microservice && nest build book-jet-microservice && nest build hotel-booking-management-microservice && nest build hotel-registering-microservice && nest build jet-booking-management-microservice && nest build jet-registering-microservice && nest build search-airline-ticket-microservice && nest build search-hotel-microservice && nest build search-jet-microservice",
    "build:auth": "nest build auth-microservice",
    "build:payment": "nest build payments-microservice",
    "build:test": "yarn run build:api-gateway && yarn run build:auth && yarn run build:payment",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:auth": "nest start auth-microservice --watch",
    "start:payment": "nest start payments-microservice --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "auth:migrate:dev": "prisma migrate dev --schema prisma/auth/schema.prisma --name ",
    "auth:migrate:dev:create": "prisma migrate dev --schema prisma/auth/schema.prisma --create-only",
    "auth:migrate": "prisma migrate dev --schema prisma/auth/schema.prisma",
    "auth:migrate:deploy": "npx prisma migrate deploy --schema prisma/auth/schema.prisma --preview-feature",
    "payment:migrate:dev": "prisma migrate dev --schema prisma/payment/schema.prisma --name ",
    "payment:migrate:dev:create": "prisma migrate dev --schema prisma/payment/schema.prisma --create-only",
    "payment:migrate:deploy": "npx prisma migrate deploy --schema prisma/payment/schema.prisma --preview-feature",
    "prisma": "prisma",
    "prisma:auth:dbpush": "npx prisma db push --schema prisma/auth/schema.prisma",
    "prisma:payment:dbpush": "npx prisma db push --schema prisma/payment/schema.prisma",
    "prisma:generate:auth_client": "prisma generate --schema prisma/auth/schema.prisma",
    "prisma:generate:payment_client": "prisma generate --schema prisma/payment/schema.prisma",
    "prisma:generate:db_clients": "yarn run prisma:generate:auth_client && yarn run prisma:generate:payment_client"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.2.6",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.14",
    "@prisma/client": "5.5.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.5.1",
    "bcrypt": "5.1.1",
    "bull": "^4.11.4",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-yet": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.6.1",
    "nestjs-prisma": "^0.22.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "5.0.0",
    "@types/bull": "^4.10.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.13",
    "@types/passport-jwt": "^3.0.10",
    "@types/passport-local": "^1.0.37",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv": "^16.3.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "prisma": "5.5.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@dure-trips/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  }
}
