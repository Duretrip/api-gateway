generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@dare/auth/client"
}

datasource db {
  provider = "mysql"
  url      = env("AUTH_DATABASE_URL")
}

model User {
  id                Int            @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String         @unique
  password          String
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  tokenValidityDate DateTime?
  token             String?
  status            UserStatusEnum @default(inactive)
  role              RoleEnum       @default(user)
}

enum UserStatusEnum {
  active
  inactive
}

enum RoleEnum {
  user
  admin
}
